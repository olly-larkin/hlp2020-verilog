{
	"module": {
		"prefix": "mod",
		"body": [
			"module $1(",
			"\t$2",
			");",
			"$3",
			"endmodule // $1"
		],
		"description": "module ... endmodule"
	},
	"wire": {
		"prefix": "wire",
		"body": [
			"wire $1;"
		],
		"description": "wire wire_name;"
	},
	"wirearray": {
		"prefix": "wirea",
		"body": [
			"wire [$1:$2] $3;"
		],
		"description": "wire [N:0] wire_name;"
	}
}