{
	"name": "hello-world",
	"displayName": "Hello World",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:verilog",
		"onCommand:extension.playground",
		"onCommand:extension.lint",
		"onCommand:extension.simulate",
		"onCommand:extension.visualise",
		"onCommand:extension.newproject",
		"onCommand:extension.newmodule"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "verilog",
				"aliases": [
					"Verilog",
					"verilog"
				],
				"extensions": [
					".v"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "verilog",
				"scopeName": "source.verilog",
				"path": "./grammars/verilog.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "verilog",
				"path": "./snippets/verilog.json"
			}
		],
		"commands": [
			{
				"command": "extension.playground",
				"title": "Verishot: Playground"
			},
			{
				"command": "extension.lint",
				"title": "Verishot: Lint"
			},
			{
				"command": "extension.simulate",
				"title": "Verishot: Simulate"
			},
			{
				"command": "extension.visualise",
				"title": "Verishot: Visualise"
			},
			{
				"command": "extension.newmodule",
				"title": "Verishot: New Module"
			},
			{
				"command": "extension.newproject",
				"title": "Verishot: New Project"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"child_process": "^1.0.2",
		"fs": "0.0.1-security"
	}
}
