{
	"name": "verishot-extension",
	"displayName": "VerishotExtension",
	"description": "VSCode Extension for Verishot",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:verilog",
		"onCommand:extension.playground",
		"onCommand:extension.lint",
		"onCommand:extension.simulate",
		"onCommand:extension.visualise",
		"onCommand:extension.newproject",
		"onCommand:extension.newmodule"
	],
	"main": "out/Extension.js",
	"contributes": {
		"languages": [
			{
				"id": "verilog",
				"aliases": [
					"Verilog",
					"verilog"
				],
				"extensions": [
					".v"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "verilog",
				"scopeName": "source.verilog",
				"path": "./grammars/verilog.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "verilog",
				"path": "./snippets/verilog.json"
			}
		],
		"commands": [
			{
				"command": "extension.lint",
				"title": "Verishot: Lint"
			},
			{
				"command": "extension.simulate",
				"title": "Verishot: Simulate"
			},
			{
				"command": "extension.visualise",
				"title": "Verishot: Visualise"
			},
			{
				"command": "extension.newmodule",
				"title": "Verishot: New Module"
			},
			{
				"command": "extension.newproject",
				"title": "Verishot: New Project"
			},
			{
				"command": "extension.deletemodule",
				"title": "Verishot: Delete Module"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"build": "fable-splitter --config splitter.config.js",
		"watch": "yarn run build --watch",
	    "test": "jest"
	},
	"devDependencies": {
		"@babel/core": "^7.8.7",
		"@babel/plugin-transform-modules-commonjs": "^7.8.3",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"fable-compiler": "^2.4.21",
		"fable-splitter": "^2.1.13",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"jest": "^25.1.0"
	}
}
